@page "/admin/assignments"
@inject AuthStateService AuthState
@inject PetService PetSvc
@inject AdminService AdminSvc
@inject NavigationManager Navigation

<PageTitle>Pet Assignments - Pawsitive Haven</PageTitle>

@if (!AuthState.IsAuthenticated || !AuthState.IsAdmin)
{
    <div class="text-center py-5">
        <i class="bi bi-shield-lock fs-1 text-danger"></i>
        <h4 class="mt-3">Access Denied</h4>
        <p class="text-muted">You must be an administrator to access this page.</p>
        <a href="/dashboard" class="btn btn-primary">Return to Dashboard</a>
    </div>
}
else
{
    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="mb-0">
                    <i class="fa-solid fa-paw me-2" style="color: #D97706;"></i>
                    Pet-Foster Assignments
                </h1>
                <p class="text-muted mb-0">Manage which pets are assigned to which fosters</p>
            </div>
            <div class="d-flex gap-2">
                <button class="btn btn-outline-secondary" @onclick="LoadDataAsync">
                    <i class="bi bi-arrow-clockwise me-1"></i> Refresh
                </button>
            </div>
        </div>

        @if (isLoading)
        {
            <div class="text-center py-5">
                <div class="spinner-border" style="color: #D97706;" role="status"></div>
                <p class="mt-2">Loading assignments...</p>
            </div>
        }
        else
        {
            <!-- Stats Cards -->
            <div class="row g-3 mb-4">
                <div class="col-md-4">
                    <div class="card border-0 shadow-sm h-100" style="border-left: 4px solid #D97706 !important;">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="rounded-circle p-3" style="background-color: rgba(217, 119, 6, 0.1);">
                                    <i class="fa-solid fa-paw fs-4" style="color: #D97706;"></i>
                                </div>
                                <div class="ms-3">
                                    <h3 class="mb-0">@allPets.Count</h3>
                                    <small class="text-muted">Total Pets</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card border-0 shadow-sm h-100" style="border-left: 4px solid #10B981 !important;">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="rounded-circle p-3" style="background-color: rgba(16, 185, 129, 0.1);">
                                    <i class="bi bi-check-circle fs-4 text-success"></i>
                                </div>
                                <div class="ms-3">
                                    <h3 class="mb-0">@allPets.Count(p => p.FosterId.HasValue)</h3>
                                    <small class="text-muted">Assigned</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card border-0 shadow-sm h-100" style="border-left: 4px solid #EF4444 !important;">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="rounded-circle p-3" style="background-color: rgba(239, 68, 68, 0.1);">
                                    <i class="bi bi-exclamation-circle fs-4 text-danger"></i>
                                </div>
                                <div class="ms-3">
                                    <h3 class="mb-0">@allPets.Count(p => !p.FosterId.HasValue)</h3>
                                    <small class="text-muted">Unassigned</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Filter Tabs -->
            <ul class="nav nav-tabs mb-4">
                <li class="nav-item">
                    <button class="nav-link @(currentFilter == "all" ? "active" : "")"
                            style="@(currentFilter == "all" ? "color: #D97706; border-color: #D97706 #D97706 #fff;" : "")"
                            @onclick="@(() => SetFilter("all"))">
                        All Pets <span class="badge bg-secondary ms-1">@allPets.Count</span>
                    </button>
                </li>
                <li class="nav-item">
                    <button class="nav-link @(currentFilter == "unassigned" ? "active" : "")"
                            style="@(currentFilter == "unassigned" ? "color: #D97706; border-color: #D97706 #D97706 #fff;" : "")"
                            @onclick="@(() => SetFilter("unassigned"))">
                        Unassigned <span class="badge bg-danger ms-1">@allPets.Count(p => !p.FosterId.HasValue)</span>
                    </button>
                </li>
                <li class="nav-item">
                    <button class="nav-link @(currentFilter == "assigned" ? "active" : "")"
                            style="@(currentFilter == "assigned" ? "color: #D97706; border-color: #D97706 #D97706 #fff;" : "")"
                            @onclick="@(() => SetFilter("assigned"))">
                        Assigned <span class="badge bg-success ms-1">@allPets.Count(p => p.FosterId.HasValue)</span>
                    </button>
                </li>
            </ul>

            <!-- Pets Table -->
            <div class="card border-0 shadow-sm">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Pet</th>
                                <th>Species</th>
                                <th>Breed</th>
                                <th>Assigned Foster</th>
                                <th>Assigned Date</th>
                                <th>Notes</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var pet in FilteredPets)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            @if (pet.Species?.ToLower() == "dog")
                                            {
                                                <i class="fa-solid fa-dog fs-5 me-2" style="color: #D97706;"></i>
                                            }
                                            else if (pet.Species?.ToLower() == "cat")
                                            {
                                                <i class="fa-solid fa-cat fs-5 me-2 text-info"></i>
                                            }
                                            else
                                            {
                                                <i class="fa-solid fa-paw fs-5 me-2 text-success"></i>
                                            }
                                            <strong>@pet.Name</strong>
                                        </div>
                                    </td>
                                    <td>@pet.Species</td>
                                    <td>@(pet.Breed ?? "-")</td>
                                    <td>
                                        @if (pet.FosterId.HasValue)
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-person-fill me-1"></i>@pet.FosterName
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Unassigned</span>
                                        }
                                    </td>
                                    <td>
                                        @if (pet.AssignedAt.HasValue)
                                        {
                                            <span class="text-muted">@pet.AssignedAt.Value.ToString("MMM d, yyyy")</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(pet.AssignmentNotes))
                                        {
                                            <span class="text-truncate d-inline-block" style="max-width: 150px;" title="@pet.AssignmentNotes">
                                                @pet.AssignmentNotes
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        @if (pet.FosterId.HasValue)
                                        {
                                            <button class="btn btn-sm btn-outline-danger me-1" @onclick="() => ShowUnassignConfirm(pet)"
                                                    title="Remove assignment">
                                                <i class="bi bi-x-circle"></i>
                                            </button>
                                            <button class="btn btn-sm btn-outline-primary" @onclick="() => ShowAssignModal(pet)"
                                                    title="Reassign">
                                                <i class="bi bi-arrow-repeat"></i>
                                            </button>
                                        }
                                        else
                                        {
                                            <button class="btn btn-sm" style="background-color: #D97706; color: white;"
                                                    @onclick="() => ShowAssignModal(pet)">
                                                <i class="bi bi-person-plus me-1"></i>Assign
                                            </button>
                                        }
                                    </td>
                                </tr>
                            }
                            @if (!FilteredPets.Any())
                            {
                                <tr>
                                    <td colspan="7" class="text-center py-4">
                                        <i class="bi bi-inbox fs-1 text-muted"></i>
                                        <p class="text-muted mt-2 mb-0">No pets found</p>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    </div>

    <!-- Assign Modal -->
    @if (showAssignModal)
    {
        <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header" style="border-bottom-color: #D97706;">
                        <h5 class="modal-title">
                            <i class="fa-solid fa-paw me-2" style="color: #D97706;"></i>
                            Assign @selectedPet?.Name to Foster
                        </h5>
                        <button type="button" class="btn-close" @onclick="CloseAssignModal"></button>
                    </div>
                    <div class="modal-body">
                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="alert alert-danger">@errorMessage</div>
                        }

                        <div class="mb-3">
                            <label class="form-label">Select Foster *</label>
                            <select class="form-select" @bind="assignForm.FosterId">
                                <option value="0">-- Select a foster --</option>
                                @foreach (var user in fosters)
                                {
                                    <option value="@user.Id">@user.Username (@user.Email)</option>
                                }
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Assignment Notes</label>
                            <textarea class="form-control" rows="3" @bind="assignForm.Notes"
                                      placeholder="Any special instructions or notes for this assignment..."></textarea>
                        </div>

                        @if (selectedPet != null)
                        {
                            <div class="alert alert-info">
                                <small>
                                    <strong>Pet Details:</strong><br />
                                    Species: @selectedPet.Species<br />
                                    Breed: @(selectedPet.Breed ?? "Unknown")<br />
                                    Age: @(selectedPet.Age.HasValue ? $"{selectedPet.Age} years" : "Unknown")
                                </small>
                            </div>
                        }
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="CloseAssignModal">Cancel</button>
                        <button type="button" class="btn" style="background-color: #D97706; color: white;"
                                @onclick="AssignPet" disabled="@isSaving">
                            @if (isSaving)
                            {
                                <span class="spinner-border spinner-border-sm me-1"></span>
                            }
                            Assign Pet
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Unassign Confirmation Modal -->
    @if (showUnassignModal)
    {
        <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Remove Assignment</h5>
                        <button type="button" class="btn-close" @onclick="CloseUnassignModal"></button>
                    </div>
                    <div class="modal-body">
                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="alert alert-danger">@errorMessage</div>
                        }
                        <p>Are you sure you want to remove <strong>@selectedPet?.Name</strong> from foster <strong>@selectedPet?.FosterName</strong>?</p>
                        <p class="text-muted small">The pet will become unassigned and available for reassignment.</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="CloseUnassignModal">Cancel</button>
                        <button type="button" class="btn btn-danger" @onclick="UnassignPet" disabled="@isSaving">
                            @if (isSaving)
                            {
                                <span class="spinner-border spinner-border-sm me-1"></span>
                            }
                            Remove Assignment
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
}

@code {
    private List<PetDto> allPets = new();
    private List<UserDto> fosters = new();
    private bool isLoading = true;
    private bool showAssignModal = false;
    private bool showUnassignModal = false;
    private bool isSaving = false;
    private string? errorMessage;
    private string currentFilter = "all";
    private PetDto? selectedPet;
    private AssignFormModel assignForm = new();

    private IEnumerable<PetDto> FilteredPets => currentFilter switch
    {
        "unassigned" => allPets.Where(p => !p.FosterId.HasValue),
        "assigned" => allPets.Where(p => p.FosterId.HasValue),
        _ => allPets
    };

    protected override async Task OnInitializedAsync()
    {
        if (!AuthState.IsAuthenticated || !AuthState.IsAdmin)
            return;

        await LoadDataAsync();
    }

    private async Task LoadDataAsync()
    {
        isLoading = true;
        try
        {
            var petsTask = PetSvc.GetAllPetsAsync();
            var usersTask = AdminSvc.GetUsersAsync();

            await Task.WhenAll(petsTask, usersTask);

            allPets = await petsTask;
            var allUsers = await usersTask;
            fosters = allUsers.Where(u => u.UserLevel == "User" && u.IsActive).ToList();
        }
        finally
        {
            isLoading = false;
        }
    }

    private void SetFilter(string filter)
    {
        currentFilter = filter;
    }

    private void ShowAssignModal(PetDto pet)
    {
        selectedPet = pet;
        assignForm = new AssignFormModel
        {
            FosterId = pet.FosterId ?? 0,
            Notes = pet.AssignmentNotes ?? ""
        };
        errorMessage = null;
        showAssignModal = true;
    }

    private void CloseAssignModal()
    {
        showAssignModal = false;
        selectedPet = null;
        errorMessage = null;
    }

    private void ShowUnassignConfirm(PetDto pet)
    {
        selectedPet = pet;
        errorMessage = null;
        showUnassignModal = true;
    }

    private void CloseUnassignModal()
    {
        showUnassignModal = false;
        selectedPet = null;
        errorMessage = null;
    }

    private async Task AssignPet()
    {
        if (selectedPet == null || assignForm.FosterId <= 0)
        {
            errorMessage = "Please select a foster to assign the pet to.";
            return;
        }

        isSaving = true;
        errorMessage = null;

        try
        {
            var request = new AssignPetRequest(assignForm.FosterId, assignForm.Notes);
            var result = await PetSvc.AssignPetToFosterAsync(selectedPet.Id, request);

            if (result != null)
            {
                CloseAssignModal();
                await LoadDataAsync();
            }
            else
            {
                errorMessage = "Failed to assign pet. Please try again.";
            }
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task UnassignPet()
    {
        if (selectedPet == null) return;

        isSaving = true;
        errorMessage = null;

        try
        {
            var result = await PetSvc.UnassignPetAsync(selectedPet.Id);

            if (result != null)
            {
                CloseUnassignModal();
                await LoadDataAsync();
            }
            else
            {
                errorMessage = "Failed to unassign pet. Please try again.";
            }
        }
        finally
        {
            isSaving = false;
        }
    }

    private class AssignFormModel
    {
        public int FosterId { get; set; }
        public string? Notes { get; set; }
    }
}
