@page "/admin/faqs"
@inject AuthStateService AuthState
@inject AdminService AdminSvc
@inject NavigationManager Navigation

<PageTitle>FAQ Management - Pawsitive Haven</PageTitle>

@if (!AuthState.IsAuthenticated || !AuthState.IsAdmin)
{
    <div class="text-center py-5">
        <i class="bi bi-shield-lock fs-1 text-danger"></i>
        <h4 class="mt-3">Access Denied</h4>
        <p class="text-muted">You must be an administrator to access this page.</p>
        <a href="/dashboard" class="btn btn-primary">Return to Dashboard</a>
    </div>
}
else
{
    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>FAQ Management</h1>
            <button class="btn btn-primary" @onclick="ShowAddModal">
                <i class="bi bi-plus-lg me-1"></i> Add FAQ
            </button>
        </div>

        @if (isLoading)
        {
            <div class="text-center py-5">
                <div class="spinner-border text-primary" role="status"></div>
                <p class="mt-2">Loading FAQs...</p>
            </div>
        }
        else if (faqs.Count == 0)
        {
            <div class="card">
                <div class="card-body text-center py-5">
                    <i class="bi bi-question-circle fs-1 text-muted"></i>
                    <h4 class="mt-3">No FAQs Yet</h4>
                    <p class="text-muted">Add your first FAQ to help users.</p>
                    <button class="btn btn-primary" @onclick="ShowAddModal">
                        <i class="bi bi-plus-lg me-1"></i> Add First FAQ
                    </button>
                </div>
            </div>
        }
        else
        {
            <div class="card">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 60px;">Order</th>
                                <th>Question</th>
                                <th>Status</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var faq in faqs.OrderBy(f => f.DisplayOrder))
                            {
                                <tr>
                                    <td>
                                        <span class="badge bg-light text-dark">@faq.DisplayOrder</span>
                                    </td>
                                    <td>
                                        <strong>@faq.Question</strong>
                                        <br />
                                        <small class="text-muted">@(faq.Answer.Length > 100 ? faq.Answer[..100] + "..." : faq.Answer)</small>
                                    </td>
                                    <td>
                                        <span class="badge @(faq.IsActive ? "bg-success" : "bg-warning")">
                                            @(faq.IsActive ? "Active" : "Hidden")
                                        </span>
                                    </td>
                                    <td class="text-end">
                                        <button class="btn btn-sm btn-outline-primary me-1" @onclick="() => ShowEditModal(faq)">
                                            <i class="bi bi-pencil"></i>
                                        </button>
                                        <button class="btn btn-sm btn-outline-danger" @onclick="() => ShowDeleteConfirm(faq)">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    </div>

    <!-- Add/Edit FAQ Modal -->
    @if (showModal)
    {
        <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
            <div class="modal-dialog modal-lg modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">@(isEditing ? "Edit FAQ" : "Add New FAQ")</h5>
                        <button type="button" class="btn-close" @onclick="CloseModal"></button>
                    </div>
                    <EditForm Model="faqForm" OnValidSubmit="SaveFaq">
                        <DataAnnotationsValidator />
                        <div class="modal-body">
                            @if (!string.IsNullOrEmpty(errorMessage))
                            {
                                <div class="alert alert-danger">@errorMessage</div>
                            }

                            <div class="mb-3">
                                <label class="form-label">Question *</label>
                                <InputText class="form-control" @bind-Value="faqForm.Question"
                                    placeholder="Enter the question" />
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Answer *</label>
                                <InputTextArea class="form-control" @bind-Value="faqForm.Answer" rows="5"
                                    placeholder="Enter the answer" />
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Display Order</label>
                                    <InputNumber class="form-control" @bind-Value="faqForm.DisplayOrder" />
                                    <small class="text-muted">Lower numbers appear first</small>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Status</label>
                                    <InputSelect class="form-select" @bind-Value="faqForm.IsActiveString">
                                        <option value="true">Active (Visible to users)</option>
                                        <option value="false">Hidden (Draft)</option>
                                    </InputSelect>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" @onclick="CloseModal">Cancel</button>
                            <button type="submit" class="btn btn-primary" disabled="@isSaving">
                                @if (isSaving)
                                {
                                    <span class="spinner-border spinner-border-sm me-1"></span>
                                }
                                @(isEditing ? "Save Changes" : "Add FAQ")
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    }

    <!-- Delete Confirmation Modal -->
    @if (showDeleteModal)
    {
        <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Delete FAQ</h5>
                        <button type="button" class="btn-close" @onclick="CloseDeleteModal"></button>
                    </div>
                    <div class="modal-body">
                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="alert alert-danger">@errorMessage</div>
                        }
                        <p>Are you sure you want to delete this FAQ?</p>
                        <p class="text-muted small"><strong>@faqToDelete?.Question</strong></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="CloseDeleteModal">Cancel</button>
                        <button type="button" class="btn btn-danger" @onclick="DeleteFaq" disabled="@isDeleting">
                            @if (isDeleting)
                            {
                                <span class="spinner-border spinner-border-sm me-1"></span>
                            }
                            Delete
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
}

@code {
    private List<FaqDto> faqs = new();
    private bool isLoading = true;
    private bool showModal = false;
    private bool showDeleteModal = false;
    private bool isEditing = false;
    private bool isSaving = false;
    private bool isDeleting = false;
    private string? errorMessage;
    private FaqDto? faqToDelete;
    private FaqFormModel faqForm = new();

    protected override async Task OnInitializedAsync()
    {
        if (!AuthState.IsAuthenticated || !AuthState.IsAdmin)
        {
            return;
        }

        await LoadFaqsAsync();
    }

    private async Task LoadFaqsAsync()
    {
        isLoading = true;
        try
        {
            faqs = await AdminSvc.GetAllFaqsAsync();
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ShowAddModal()
    {
        faqForm = new FaqFormModel
        {
            DisplayOrder = faqs.Count > 0 ? faqs.Max(f => f.DisplayOrder) + 1 : 1,
            IsActiveString = "true"
        };
        isEditing = false;
        errorMessage = null;
        showModal = true;
    }

    private void ShowEditModal(FaqDto faq)
    {
        faqForm = new FaqFormModel
        {
            Id = faq.Id,
            Question = faq.Question,
            Answer = faq.Answer,
            DisplayOrder = faq.DisplayOrder,
            IsActiveString = faq.IsActive.ToString().ToLower()
        };
        isEditing = true;
        errorMessage = null;
        showModal = true;
    }

    private void CloseModal()
    {
        showModal = false;
        faqForm = new FaqFormModel();
        errorMessage = null;
    }

    private async Task SaveFaq()
    {
        isSaving = true;
        errorMessage = null;

        try
        {
            if (isEditing)
            {
                var request = new UpdateFaqRequest(
                    faqForm.Question,
                    faqForm.Answer,
                    faqForm.DisplayOrder,
                    bool.Parse(faqForm.IsActiveString ?? "true")
                );
                var result = await AdminSvc.UpdateFaqAsync(faqForm.Id, request);
                if (result == null)
                {
                    errorMessage = "Failed to update FAQ. Please try again.";
                    return;
                }
            }
            else
            {
                var request = new CreateFaqRequest(
                    faqForm.Question ?? "",
                    faqForm.Answer ?? "",
                    faqForm.DisplayOrder,
                    bool.Parse(faqForm.IsActiveString ?? "true")
                );
                var result = await AdminSvc.CreateFaqAsync(request);
                if (result == null)
                {
                    errorMessage = "Failed to create FAQ. Please try again.";
                    return;
                }
            }

            CloseModal();
            await LoadFaqsAsync();
        }
        finally
        {
            isSaving = false;
        }
    }

    private void ShowDeleteConfirm(FaqDto faq)
    {
        faqToDelete = faq;
        errorMessage = null;
        showDeleteModal = true;
    }

    private void CloseDeleteModal()
    {
        showDeleteModal = false;
        faqToDelete = null;
        errorMessage = null;
    }

    private async Task DeleteFaq()
    {
        if (faqToDelete == null) return;

        isDeleting = true;
        errorMessage = null;

        try
        {
            var success = await AdminSvc.DeleteFaqAsync(faqToDelete.Id);
            if (success)
            {
                CloseDeleteModal();
                await LoadFaqsAsync();
            }
            else
            {
                errorMessage = "Failed to delete FAQ. Please try again.";
            }
        }
        finally
        {
            isDeleting = false;
        }
    }

    private class FaqFormModel
    {
        public int Id { get; set; }
        public string? Question { get; set; }
        public string? Answer { get; set; }
        public int DisplayOrder { get; set; }
        public string? IsActiveString { get; set; }
    }
}
