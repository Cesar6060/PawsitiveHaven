@page "/admin/users"
@inject AuthStateService AuthState
@inject AdminService AdminSvc
@inject NavigationManager Navigation

<PageTitle>User Management - Pawsitive Haven</PageTitle>

@if (!AuthState.IsAuthenticated || !AuthState.IsAdmin)
{
    <div class="text-center py-5">
        <i class="bi bi-shield-lock fs-1 text-danger"></i>
        <h4 class="mt-3">Access Denied</h4>
        <p class="text-muted">You must be an administrator to access this page.</p>
        <a href="/dashboard" class="btn btn-primary">Return to Dashboard</a>
    </div>
}
else
{
    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>User Management</h1>
            <button class="btn btn-primary" @onclick="ShowAddModal">
                <i class="bi bi-plus-lg me-1"></i> Add User
            </button>
        </div>

        @if (isLoading)
        {
            <div class="text-center py-5">
                <div class="spinner-border text-primary" role="status"></div>
                <p class="mt-2">Loading users...</p>
            </div>
        }
        else
        {
            <div class="card">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Username</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th>Status</th>
                                <th>Created</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in users)
                            {
                                <tr>
                                    <td>
                                        <strong>@user.Username</strong>
                                    </td>
                                    <td>@user.Email</td>
                                    <td>
                                        <span class="badge @(user.UserLevel == "Admin" ? "bg-danger" : "bg-secondary")">
                                            @user.UserLevel
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge @(user.IsActive ? "bg-success" : "bg-warning")">
                                            @(user.IsActive ? "Active" : "Inactive")
                                        </span>
                                    </td>
                                    <td>@user.CreatedAt.ToString("MMM dd, yyyy")</td>
                                    <td class="text-end">
                                        <button class="btn btn-sm btn-outline-primary me-1" @onclick="() => ShowEditModal(user)">
                                            <i class="bi bi-pencil"></i>
                                        </button>
                                        <button class="btn btn-sm btn-outline-danger" @onclick="() => ShowDeleteConfirm(user)"
                                            disabled="@(user.Username == AuthState.Username)">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    </div>

    <!-- Add/Edit User Modal -->
    @if (showModal)
    {
        <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">@(isEditing ? "Edit User" : "Add New User")</h5>
                        <button type="button" class="btn-close" @onclick="CloseModal"></button>
                    </div>
                    <EditForm Model="userForm" OnValidSubmit="SaveUser">
                        <DataAnnotationsValidator />
                        <div class="modal-body">
                            @if (!string.IsNullOrEmpty(errorMessage))
                            {
                                <div class="alert alert-danger">@errorMessage</div>
                            }

                            <div class="mb-3">
                                <label class="form-label">Username *</label>
                                <InputText class="form-control" @bind-Value="userForm.Username" placeholder="Username" />
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Email *</label>
                                <InputText class="form-control" type="email" @bind-Value="userForm.Email" placeholder="Email" />
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Password @(isEditing ? "(leave blank to keep current)" : "*")</label>
                                <InputText class="form-control" type="password" @bind-Value="userForm.Password"
                                    placeholder="@(isEditing ? "Leave blank to keep current" : "Password")" />
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Role</label>
                                    <InputSelect class="form-select" @bind-Value="userForm.UserLevel">
                                        <option value="User">User</option>
                                        <option value="Admin">Admin</option>
                                    </InputSelect>
                                </div>
                                @if (isEditing)
                                {
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Status</label>
                                        <InputSelect class="form-select" @bind-Value="userForm.IsActiveString">
                                            <option value="true">Active</option>
                                            <option value="false">Inactive</option>
                                        </InputSelect>
                                    </div>
                                }
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" @onclick="CloseModal">Cancel</button>
                            <button type="submit" class="btn btn-primary" disabled="@isSaving">
                                @if (isSaving)
                                {
                                    <span class="spinner-border spinner-border-sm me-1"></span>
                                }
                                @(isEditing ? "Save Changes" : "Add User")
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    }

    <!-- Delete Confirmation Modal -->
    @if (showDeleteModal)
    {
        <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Delete User</h5>
                        <button type="button" class="btn-close" @onclick="CloseDeleteModal"></button>
                    </div>
                    <div class="modal-body">
                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="alert alert-danger">@errorMessage</div>
                        }
                        <p>Are you sure you want to delete <strong>@userToDelete?.Username</strong>?</p>
                        <p class="text-muted small">This will permanently delete the user and all their data.</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="CloseDeleteModal">Cancel</button>
                        <button type="button" class="btn btn-danger" @onclick="DeleteUser" disabled="@isDeleting">
                            @if (isDeleting)
                            {
                                <span class="spinner-border spinner-border-sm me-1"></span>
                            }
                            Delete
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
}

@code {
    private List<UserDto> users = new();
    private bool isLoading = true;
    private bool showModal = false;
    private bool showDeleteModal = false;
    private bool isEditing = false;
    private bool isSaving = false;
    private bool isDeleting = false;
    private string? errorMessage;
    private UserDto? userToDelete;
    private UserFormModel userForm = new();

    protected override async Task OnInitializedAsync()
    {
        if (!AuthState.IsAuthenticated || !AuthState.IsAdmin)
        {
            return;
        }

        await LoadUsersAsync();
    }

    private async Task LoadUsersAsync()
    {
        isLoading = true;
        try
        {
            users = await AdminSvc.GetUsersAsync();
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ShowAddModal()
    {
        userForm = new UserFormModel { UserLevel = "User", IsActiveString = "true" };
        isEditing = false;
        errorMessage = null;
        showModal = true;
    }

    private void ShowEditModal(UserDto user)
    {
        userForm = new UserFormModel
        {
            Id = user.Id,
            Username = user.Username,
            Email = user.Email,
            UserLevel = user.UserLevel,
            IsActiveString = user.IsActive.ToString().ToLower()
        };
        isEditing = true;
        errorMessage = null;
        showModal = true;
    }

    private void CloseModal()
    {
        showModal = false;
        userForm = new UserFormModel();
        errorMessage = null;
    }

    private async Task SaveUser()
    {
        isSaving = true;
        errorMessage = null;

        try
        {
            if (isEditing)
            {
                var request = new UpdateUserRequest(
                    userForm.Username,
                    userForm.Email,
                    string.IsNullOrEmpty(userForm.Password) ? null : userForm.Password,
                    userForm.UserLevel,
                    bool.Parse(userForm.IsActiveString ?? "true")
                );
                var result = await AdminSvc.UpdateUserAsync(userForm.Id, request);
                if (result == null)
                {
                    errorMessage = "Failed to update user. Username or email may already exist.";
                    return;
                }
            }
            else
            {
                if (string.IsNullOrEmpty(userForm.Password))
                {
                    errorMessage = "Password is required for new users.";
                    return;
                }

                var request = new CreateUserRequest(
                    userForm.Username ?? "",
                    userForm.Email ?? "",
                    userForm.Password,
                    userForm.UserLevel
                );
                var result = await AdminSvc.CreateUserAsync(request);
                if (result == null)
                {
                    errorMessage = "Failed to create user. Username or email may already exist.";
                    return;
                }
            }

            CloseModal();
            await LoadUsersAsync();
        }
        finally
        {
            isSaving = false;
        }
    }

    private void ShowDeleteConfirm(UserDto user)
    {
        userToDelete = user;
        errorMessage = null;
        showDeleteModal = true;
    }

    private void CloseDeleteModal()
    {
        showDeleteModal = false;
        userToDelete = null;
        errorMessage = null;
    }

    private async Task DeleteUser()
    {
        if (userToDelete == null) return;

        isDeleting = true;
        errorMessage = null;

        try
        {
            var success = await AdminSvc.DeleteUserAsync(userToDelete.Id);
            if (success)
            {
                CloseDeleteModal();
                await LoadUsersAsync();
            }
            else
            {
                errorMessage = "Failed to delete user. Please try again.";
            }
        }
        finally
        {
            isDeleting = false;
        }
    }

    private class UserFormModel
    {
        public int Id { get; set; }
        public string? Username { get; set; }
        public string? Email { get; set; }
        public string? Password { get; set; }
        public string? UserLevel { get; set; }
        public string? IsActiveString { get; set; }
    }
}
