@page "/chat"
@page "/chat/{ConversationId:int?}"
@inject AuthStateService AuthState
@inject ChatService ChatSvc
@inject NavigationManager Navigation
@inject IJSRuntime JS

<PageTitle>AI Chat - Pawsitive Haven</PageTitle>

@if (!AuthState.IsAuthenticated)
{
    <div class="text-center py-5">
        <p>Please log in to use the AI chat.</p>
        <a href="/login" class="btn btn-primary">Login</a>
    </div>
}
else
{
    <div class="chat-container">
        <!-- Sidebar with conversations -->
        <div class="chat-sidebar d-none d-md-flex">
            <div class="sidebar-header">
                <h5 class="mb-0">Conversations</h5>
                <button class="btn btn-sm btn-outline-primary" @onclick="StartNewChat">
                    <i class="bi bi-plus-lg"></i>
                </button>
            </div>
            <div class="conversation-list">
                @if (isLoadingConversations)
                {
                    <div class="text-center py-3">
                        <div class="spinner-border spinner-border-sm"></div>
                    </div>
                }
                else if (conversations.Count == 0)
                {
                    <div class="text-center py-3 text-muted small">
                        No conversations yet
                    </div>
                }
                else
                {
                    @foreach (var conv in conversations)
                    {
                        <div class="conversation-item @(currentConversationId == conv.Id ? "active" : "")"
                            @onclick="async () => await LoadConversation(conv.Id)">
                            <div class="conversation-title">@(conv.Title ?? "New Chat")</div>
                            <div class="conversation-date">@conv.UpdatedAt.ToString("MMM dd")</div>
                        </div>
                    }
                }
            </div>
        </div>

        <!-- Main chat area -->
        <div class="chat-main">
            <div class="chat-header d-md-none">
                <button class="btn btn-sm btn-outline-secondary me-2" @onclick="ToggleMobileSidebar">
                    <i class="bi bi-list"></i>
                </button>
                <span>@(currentConversation?.Title ?? "New Chat")</span>
                <button class="btn btn-sm btn-outline-primary ms-auto" @onclick="StartNewChat">
                    <i class="bi bi-plus-lg"></i>
                </button>
            </div>

            <div class="chat-messages" @ref="messagesContainer">
                @if (messages.Count == 0 && !isLoading)
                {
                    <div class="welcome-message">
                        <div class="welcome-icon">
                            <i class="bi bi-chat-heart fs-1"></i>
                        </div>
                        <h4>Welcome to Pawsitive Haven AI</h4>
                        <p class="text-muted">Ask me anything about pet care, adoption, or our services!</p>
                        <div class="suggestion-chips">
                            <button class="chip" @onclick="@(() => SendSuggestion("What are your adoption hours?"))">
                                Adoption hours
                            </button>
                            <button class="chip" @onclick="@(() => SendSuggestion("How do I adopt a pet?"))">
                                How to adopt
                            </button>
                            <button class="chip" @onclick="@(() => SendSuggestion("What vaccinations does my pet need?"))">
                                Pet vaccinations
                            </button>
                        </div>
                    </div>
                }
                else
                {
                    @foreach (var msg in messages)
                    {
                        <div class="message @(msg.Role == "user" ? "user-message" : "assistant-message")">
                            <div class="message-avatar">
                                @if (msg.Role == "user")
                                {
                                    <i class="bi bi-person-circle"></i>
                                }
                                else
                                {
                                    <i class="bi bi-robot"></i>
                                }
                            </div>
                            <div class="message-content">
                                <div class="message-text">@msg.Content</div>
                                <div class="message-time">@msg.CreatedAt.ToString("h:mm tt")</div>
                                @if (msg.Role == "assistant" && currentConversationId.HasValue)
                                {
                                    <button class="btn btn-link btn-sm contact-us-btn p-0 mt-1"
                                            @onclick="() => OpenEscalationModal(msg)">
                                        <i class="bi bi-envelope"></i> This didn't help - Contact Us
                                    </button>
                                }
                            </div>
                        </div>
                    }

                    @if (isLoading)
                    {
                        <div class="message assistant-message">
                            <div class="message-avatar">
                                <i class="bi bi-robot"></i>
                            </div>
                            <div class="message-content">
                                <div class="typing-indicator">
                                    <span></span><span></span><span></span>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>

            <div class="chat-input-area">
                <form @onsubmit="SendMessage" @onsubmit:preventDefault>
                    <div class="input-container">
                        <textarea class="form-control" rows="1" placeholder="Type your message..."
                            @bind="inputMessage" @bind:event="oninput"
                            @onkeydown="HandleKeyDown" @onkeydown:preventDefault="shouldPreventDefault"
                            disabled="@isLoading"></textarea>
                        <button type="submit" class="btn btn-primary send-btn"
                            disabled="@(isLoading || string.IsNullOrWhiteSpace(inputMessage))">
                            <i class="bi bi-send-fill"></i>
                        </button>
                    </div>
                </form>
                <small class="text-muted mt-1 d-block text-center">
                    AI can make mistakes. Verify important information.
                </small>
            </div>
        </div>
    </div>

    <!-- Mobile sidebar overlay -->
    @if (showMobileSidebar)
    {
        <div class="mobile-sidebar-overlay" @onclick="ToggleMobileSidebar">
            <div class="mobile-sidebar" @onclick:stopPropagation="true">
                <div class="sidebar-header">
                    <h5 class="mb-0">Conversations</h5>
                    <button class="btn btn-sm btn-outline-secondary" @onclick="ToggleMobileSidebar">
                        <i class="bi bi-x-lg"></i>
                    </button>
                </div>
                <div class="conversation-list">
                    @foreach (var conv in conversations)
                    {
                        <div class="conversation-item @(currentConversationId == conv.Id ? "active" : "")"
                            @onclick="async () => { try { await LoadConversation(conv.Id); } finally { ToggleMobileSidebar(); } }">
                            <div class="conversation-title">@(conv.Title ?? "New Chat")</div>
                            <div class="conversation-date">@conv.UpdatedAt.ToString("MMM dd")</div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }

    <!-- Escalation Modal -->
    @if (showEscalationModal)
    {
        <div class="modal-overlay" @onclick="CloseEscalationModal">
            <div class="escalation-modal" @onclick:stopPropagation="true">
                <div class="modal-header-custom">
                    <h5 class="mb-0"><i class="bi bi-envelope me-2"></i>Contact Foster Support</h5>
                    <button class="btn btn-sm btn-outline-secondary" @onclick="CloseEscalationModal">
                        <i class="bi bi-x-lg"></i>
                    </button>
                </div>

                @if (escalationSubmitted)
                {
                    <div class="modal-body text-center py-5">
                        <div class="success-icon mb-3">
                            <i class="bi bi-check-circle-fill text-success fs-1"></i>
                        </div>
                        <h5>Request Submitted!</h5>
                        <p class="text-muted">
                            Our foster support team has received your request and will respond to
                            <strong>@escalationEmail</strong> shortly.
                        </p>
                        <button class="btn btn-primary" @onclick="CloseEscalationModal">
                            Close
                        </button>
                    </div>
                }
                else
                {
                    <form @onsubmit="SubmitEscalation" @onsubmit:preventDefault>
                        <div class="modal-body">
                            @if (!string.IsNullOrEmpty(escalationError))
                            {
                                <div class="alert alert-danger">@escalationError</div>
                            }

                            <div class="mb-3">
                                <label class="form-label">Your Name</label>
                                <input type="text" class="form-control" @bind="escalationName" required
                                       placeholder="Enter your name" />
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Your Email</label>
                                <input type="email" class="form-control" @bind="escalationEmail" required
                                       placeholder="Enter your email address" />
                                <small class="text-muted">We'll respond to this email address.</small>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">What do you need help with?</label>
                                <textarea class="form-control" rows="3" @bind="escalationQuestion" required
                                          placeholder="Describe your question or issue..."></textarea>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Additional Context (Optional)</label>
                                <textarea class="form-control" rows="2" @bind="escalationContext"
                                          placeholder="Any additional details that might help..."></textarea>
                            </div>

                            <div class="form-text mb-3">
                                <i class="bi bi-info-circle me-1"></i>
                                Your conversation history will be included to help our team understand your question.
                            </div>
                        </div>

                        <div class="modal-footer-custom">
                            <button type="button" class="btn btn-outline-secondary" @onclick="CloseEscalationModal">
                                Cancel
                            </button>
                            <button type="submit" class="btn btn-primary" disabled="@isSubmittingEscalation">
                                @if (isSubmittingEscalation)
                                {
                                    <span class="spinner-border spinner-border-sm me-2"></span>
                                }
                                Send to Support
                            </button>
                        </div>
                    </form>
                }
            </div>
        </div>
    }
}

