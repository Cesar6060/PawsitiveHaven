@code {
    [Parameter]
    public int? ConversationId { get; set; }

    private ElementReference messagesContainer;
    private List<ConversationDto> conversations = new();
    private ConversationDto? currentConversation;
    private List<MessageDto> messages = new();
    private string inputMessage = "";
    private int? currentConversationId;
    private bool isLoading = false;
    private bool isLoadingConversations = true;
    private bool showMobileSidebar = false;
    private bool shouldPreventDefault = false;

    // Escalation modal state
    private bool showEscalationModal = false;
    private bool isSubmittingEscalation = false;
    private bool escalationSubmitted = false;
    private string escalationName = "";
    private string escalationEmail = "";
    private string escalationQuestion = "";
    private string escalationContext = "";
    private string? escalationError = null;
    private MessageDto? escalationMessage = null;

    protected override async Task OnInitializedAsync()
    {
        if (!AuthState.IsAuthenticated)
        {
            Navigation.NavigateTo("/login");
            return;
        }

        await LoadConversationsAsync();

        if (ConversationId.HasValue)
        {
            await LoadConversation(ConversationId.Value);
        }
    }

    private async Task LoadConversationsAsync()
    {
        isLoadingConversations = true;
        try
        {
            conversations = await ChatSvc.GetConversationsAsync();
        }
        finally
        {
            isLoadingConversations = false;
        }
    }

    private async Task LoadConversation(int conversationId)
    {
        currentConversationId = conversationId;
        var conv = await ChatSvc.GetConversationAsync(conversationId);
        if (conv != null)
        {
            currentConversation = conv;
            messages = conv.Messages ?? new List<MessageDto>();
            await ScrollToBottom();
        }
    }

    private void StartNewChat()
    {
        currentConversationId = null;
        currentConversation = null;
        messages = new List<MessageDto>();
        inputMessage = "";
    }

    private async Task SendSuggestion(string suggestion)
    {
        inputMessage = suggestion;
        await SendMessage();
    }

    private void HandleKeyDown(KeyboardEventArgs e)
    {
        // Set preventDefault for Enter without Shift to prevent newline in textarea
        shouldPreventDefault = e.Key == "Enter" && !e.ShiftKey;
    }

    private async Task SendMessage()
    {
        if (string.IsNullOrWhiteSpace(inputMessage) || isLoading)
            return;

        var userMessage = inputMessage.Trim();
        inputMessage = "";
        isLoading = true;

        // Add user message to UI immediately
        messages.Add(new MessageDto("user", userMessage, DateTime.Now));
        await ScrollToBottom();

        try
        {
            var response = await ChatSvc.SendMessageAsync(userMessage, currentConversationId);

            if (response.Success && response.Response != null)
            {
                messages.Add(new MessageDto("assistant", response.Response, DateTime.Now));
                currentConversationId = response.ConversationId;

                // Refresh conversations list
                await LoadConversationsAsync();
            }
            else
            {
                messages.Add(new MessageDto("assistant",
                    response.Error ?? "Sorry, I encountered an error. Please try again.",
                    DateTime.Now));
            }
        }
        catch
        {
            messages.Add(new MessageDto("assistant",
                "Sorry, I couldn't connect to the server. Please try again.",
                DateTime.Now));
        }
        finally
        {
            isLoading = false;
            await ScrollToBottom();
        }
    }

    private async Task ScrollToBottom()
    {
        await Task.Delay(50);
        try
        {
            await JS.InvokeVoidAsync("chatHelpers.scrollToBottom", ".chat-messages");
        }
        catch { }
    }

    private void ToggleMobileSidebar()
    {
        showMobileSidebar = !showMobileSidebar;
    }

    private void OpenEscalationModal(MessageDto message)
    {
        escalationMessage = message;
        escalationName = "";
        escalationEmail = "";
        escalationQuestion = "";
        escalationContext = "";
        escalationError = null;
        escalationSubmitted = false;
        showEscalationModal = true;
    }

    private void CloseEscalationModal()
    {
        showEscalationModal = false;
        escalationMessage = null;
        escalationSubmitted = false;
    }

    private async Task SubmitEscalation()
    {
        if (string.IsNullOrWhiteSpace(escalationName) ||
            string.IsNullOrWhiteSpace(escalationEmail) ||
            string.IsNullOrWhiteSpace(escalationQuestion))
        {
            escalationError = "Please fill in all required fields.";
            return;
        }

        if (!currentConversationId.HasValue)
        {
            escalationError = "No active conversation to escalate.";
            return;
        }

        isSubmittingEscalation = true;
        escalationError = null;

        try
        {
            var request = new CreateEscalationRequest(
                currentConversationId.Value,
                null, // MessageId - we're not tracking message IDs client-side
                escalationEmail.Trim(),
                escalationName.Trim(),
                escalationQuestion.Trim(),
                string.IsNullOrWhiteSpace(escalationContext) ? null : escalationContext.Trim()
            );

            var response = await ChatSvc.CreateEscalationAsync(request);

            if (response != null)
            {
                escalationSubmitted = true;
            }
            else
            {
                escalationError = "Failed to submit your request. Please try again.";
            }
        }
        catch (Exception)
        {
            escalationError = "An error occurred. Please try again.";
        }
        finally
        {
            isSubmittingEscalation = false;
        }
    }
}
