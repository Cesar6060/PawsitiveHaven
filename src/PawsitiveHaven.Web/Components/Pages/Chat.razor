@code {
    [Parameter]
    public int? ConversationId { get; set; }

    private ElementReference messagesContainer;
    private List<ConversationDto> conversations = new();
    private ConversationDto? currentConversation;
    private List<MessageDto> messages = new();
    private string inputMessage = "";
    private int? currentConversationId;
    private bool isLoading = false;
    private bool isLoadingConversations = true;
    private bool showMobileSidebar = false;

    protected override async Task OnInitializedAsync()
    {
        if (!AuthState.IsAuthenticated)
        {
            Navigation.NavigateTo("/login");
            return;
        }

        await LoadConversationsAsync();

        if (ConversationId.HasValue)
        {
            await LoadConversation(ConversationId.Value);
        }
    }

    private async Task LoadConversationsAsync()
    {
        isLoadingConversations = true;
        try
        {
            conversations = await ChatSvc.GetConversationsAsync();
        }
        finally
        {
            isLoadingConversations = false;
        }
    }

    private async Task LoadConversation(int conversationId)
    {
        currentConversationId = conversationId;
        var conv = await ChatSvc.GetConversationAsync(conversationId);
        if (conv != null)
        {
            currentConversation = conv;
            messages = conv.Messages ?? new List<MessageDto>();
            await ScrollToBottom();
        }
    }

    private void StartNewChat()
    {
        currentConversationId = null;
        currentConversation = null;
        messages = new List<MessageDto>();
        inputMessage = "";
    }

    private async Task SendSuggestion(string suggestion)
    {
        inputMessage = suggestion;
        await SendMessage();
    }

    private async Task HandleKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !e.ShiftKey)
        {
            await SendMessage();
        }
    }

    private async Task SendMessage()
    {
        if (string.IsNullOrWhiteSpace(inputMessage) || isLoading)
            return;

        var userMessage = inputMessage.Trim();
        inputMessage = "";
        isLoading = true;

        // Add user message to UI immediately
        messages.Add(new MessageDto("user", userMessage, DateTime.Now));
        await ScrollToBottom();

        try
        {
            var response = await ChatSvc.SendMessageAsync(userMessage, currentConversationId);

            if (response.Success && response.Response != null)
            {
                messages.Add(new MessageDto("assistant", response.Response, DateTime.Now));
                currentConversationId = response.ConversationId;

                // Refresh conversations list
                await LoadConversationsAsync();
            }
            else
            {
                messages.Add(new MessageDto("assistant",
                    response.Error ?? "Sorry, I encountered an error. Please try again.",
                    DateTime.Now));
            }
        }
        catch
        {
            messages.Add(new MessageDto("assistant",
                "Sorry, I couldn't connect to the server. Please try again.",
                DateTime.Now));
        }
        finally
        {
            isLoading = false;
            await ScrollToBottom();
        }
    }

    private async Task ScrollToBottom()
    {
        await Task.Delay(50);
        try
        {
            await JS.InvokeVoidAsync("eval", "document.querySelector('.chat-messages')?.scrollTo(0, document.querySelector('.chat-messages')?.scrollHeight)");
        }
        catch { }
    }

    private void ToggleMobileSidebar()
    {
        showMobileSidebar = !showMobileSidebar;
    }
}
