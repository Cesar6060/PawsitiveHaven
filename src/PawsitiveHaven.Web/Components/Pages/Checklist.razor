@page "/checklist"
@inject AuthStateService AuthState
@inject AppointmentService AppointmentSvc
@inject PetService PetSvc
@inject NavigationManager Navigation

<PageTitle>Checklist - Pawsitive Haven</PageTitle>

@if (!AuthState.IsAuthenticated)
{
    <div class="text-center py-5">
        <p>Please log in to view your checklist.</p>
        <a href="/login" class="btn btn-primary">Login</a>
    </div>
}
else
{
    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>My Checklist</h1>
            <button class="btn btn-primary" @onclick="ShowAddModal">
                <i class="bi bi-plus-lg me-1"></i> Add Task
            </button>
        </div>

        <!-- Filter Tabs -->
        <ul class="nav nav-tabs mb-4">
            <li class="nav-item">
                <button class="nav-link @(filter == "all" ? "active" : "")" @onclick="@(() => SetFilter("all"))">
                    All <span class="badge bg-secondary ms-1">@appointments.Count</span>
                </button>
            </li>
            <li class="nav-item">
                <button class="nav-link @(filter == "pending" ? "active" : "")" @onclick="@(() => SetFilter("pending"))">
                    Pending <span class="badge bg-warning ms-1">@appointments.Count(a => !a.IsCompleted)</span>
                </button>
            </li>
            <li class="nav-item">
                <button class="nav-link @(filter == "completed" ? "active" : "")" @onclick="@(() => SetFilter("completed"))">
                    Completed <span class="badge bg-success ms-1">@appointments.Count(a => a.IsCompleted)</span>
                </button>
            </li>
        </ul>

        @if (isLoading)
        {
            <div class="text-center py-5">
                <div class="spinner-border text-primary" role="status"></div>
                <p class="mt-2">Loading tasks...</p>
            </div>
        }
        else if (filteredAppointments.Count == 0)
        {
            <div class="card">
                <div class="card-body text-center py-5">
                    <i class="bi bi-calendar-check fs-1 text-muted"></i>
                    <h4 class="mt-3">No Tasks</h4>
                    <p class="text-muted">
                        @if (filter == "all")
                        {
                            <text>Add your first task to get started!</text>
                        }
                        else if (filter == "pending")
                        {
                            <text>No pending tasks. Great job!</text>
                        }
                        else
                        {
                            <text>No completed tasks yet.</text>
                        }
                    </p>
                    @if (filter == "all")
                    {
                        <button class="btn btn-primary" @onclick="ShowAddModal">
                            <i class="bi bi-plus-lg me-1"></i> Add Your First Task
                        </button>
                    }
                </div>
            </div>
        }
        else
        {
            <div class="list-group">
                @foreach (var apt in filteredAppointments.OrderBy(a => a.IsCompleted).ThenBy(a => a.AppointmentDate))
                {
                    <div class="list-group-item @(apt.IsCompleted ? "list-group-item-light" : "")">
                        <div class="d-flex align-items-center">
                            <div class="form-check me-3">
                                <input type="checkbox" class="form-check-input"
                                    checked="@apt.IsCompleted"
                                    @onchange="@(() => ToggleComplete(apt))"
                                    style="transform: scale(1.3);" />
                            </div>
                            <div class="flex-grow-1">
                                <h6 class="mb-1 @(apt.IsCompleted ? "text-decoration-line-through text-muted" : "")">
                                    @apt.Title
                                </h6>
                                <div class="d-flex align-items-center gap-2">
                                    <small class="text-muted">
                                        <i class="bi bi-calendar me-1"></i>
                                        @apt.AppointmentDate.ToString("MMM dd, yyyy")
                                        @if (apt.AppointmentTime.HasValue)
                                        {
                                            <text> at @apt.AppointmentTime.Value.ToString("hh:mm tt")</text>
                                        }
                                    </small>
                                    @if (!string.IsNullOrEmpty(apt.PetName))
                                    {
                                        <span class="badge bg-info">
                                            <i class="bi bi-heart-fill me-1"></i>@apt.PetName
                                        </span>
                                    }
                                </div>
                                @if (!string.IsNullOrEmpty(apt.Description))
                                {
                                    <small class="text-muted d-block mt-1">@apt.Description</small>
                                }
                            </div>
                            <div class="btn-group">
                                <button class="btn btn-sm btn-outline-secondary" @onclick="@(() => ShowEditModal(apt))">
                                    <i class="bi bi-pencil"></i>
                                </button>
                                <button class="btn btn-sm btn-outline-danger" @onclick="@(() => ShowDeleteConfirm(apt))">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>

    <!-- Add/Edit Appointment Modal -->
    @if (showModal)
    {
        <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">@(isEditing ? "Edit Task" : "Add New Task")</h5>
                        <button type="button" class="btn-close" @onclick="CloseModal"></button>
                    </div>
                    <EditForm Model="appointmentForm" OnValidSubmit="SaveAppointment">
                        <DataAnnotationsValidator />
                        <div class="modal-body">
                            @if (!string.IsNullOrEmpty(errorMessage))
                            {
                                <div class="alert alert-danger">@errorMessage</div>
                            }

                            <div class="mb-3">
                                <label class="form-label">Title *</label>
                                <InputText class="form-control" @bind-Value="appointmentForm.Title"
                                    placeholder="e.g., Vet Appointment, Grooming" />
                                <ValidationMessage For="@(() => appointmentForm.Title)" />
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Pet (optional)</label>
                                <InputSelect class="form-select" @bind-Value="appointmentForm.PetIdString">
                                    <option value="">No specific pet</option>
                                    @foreach (var pet in pets)
                                    {
                                        <option value="@pet.Id.ToString()">@pet.Name (@pet.Species)</option>
                                    }
                                </InputSelect>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Date *</label>
                                    <InputDate class="form-control" @bind-Value="appointmentForm.Date" />
                                    <ValidationMessage For="@(() => appointmentForm.Date)" />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Time (optional)</label>
                                    <input type="time" class="form-control" value="@appointmentForm.TimeString"
                                        @onchange="@(e => appointmentForm.TimeString = e.Value?.ToString())" />
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Description</label>
                                <InputTextArea class="form-control" @bind-Value="appointmentForm.Description"
                                    rows="2" placeholder="Additional details..." />
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" @onclick="CloseModal">Cancel</button>
                            <button type="submit" class="btn btn-primary" disabled="@isSaving">
                                @if (isSaving)
                                {
                                    <span class="spinner-border spinner-border-sm me-1"></span>
                                }
                                @(isEditing ? "Save Changes" : "Add Task")
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    }

    <!-- Delete Confirmation Modal -->
    @if (showDeleteModal)
    {
        <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Delete Task</h5>
                        <button type="button" class="btn-close" @onclick="CloseDeleteModal"></button>
                    </div>
                    <div class="modal-body">
                        @if (!string.IsNullOrEmpty(errorMessage) && showDeleteModal)
                        {
                            <div class="alert alert-danger">@errorMessage</div>
                        }
                        <p>Are you sure you want to delete <strong>@appointmentToDelete?.Title</strong>?</p>
                        <p class="text-muted small">This action cannot be undone.</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="CloseDeleteModal">Cancel</button>
                        <button type="button" class="btn btn-danger" @onclick="DeleteAppointment" disabled="@isDeleting">
                            @if (isDeleting)
                            {
                                <span class="spinner-border spinner-border-sm me-1"></span>
                            }
                            Delete
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
}

@code {
    private List<AppointmentDto> appointments = new();
    private List<PetDto> pets = new();
    private bool isLoading = true;
    private bool showModal = false;
    private bool showDeleteModal = false;
    private bool isEditing = false;
    private bool isSaving = false;
    private bool isDeleting = false;
    private string filter = "all";
    private string? errorMessage;
    private AppointmentDto? appointmentToDelete;
    private AppointmentFormModel appointmentForm = new();

    private List<AppointmentDto> filteredAppointments => filter switch
    {
        "pending" => appointments.Where(a => !a.IsCompleted).ToList(),
        "completed" => appointments.Where(a => a.IsCompleted).ToList(),
        _ => appointments
    };

    protected override async Task OnInitializedAsync()
    {
        if (!AuthState.IsAuthenticated)
        {
            Navigation.NavigateTo("/login");
            return;
        }

        await LoadDataAsync();
    }

    private async Task LoadDataAsync()
    {
        isLoading = true;
        try
        {
            var appointmentsTask = AppointmentSvc.GetAppointmentsAsync();
            var petsTask = PetSvc.GetPetsAsync();

            await Task.WhenAll(appointmentsTask, petsTask);

            appointments = await appointmentsTask;
            pets = await petsTask;
        }
        finally
        {
            isLoading = false;
        }
    }

    private void SetFilter(string newFilter)
    {
        filter = newFilter;
    }

    private async Task ToggleComplete(AppointmentDto appointment)
    {
        await AppointmentSvc.ToggleCompleteAsync(appointment.Id);
        await LoadDataAsync();
    }

    private void ShowAddModal()
    {
        appointmentForm = new AppointmentFormModel
        {
            Date = DateOnly.FromDateTime(DateTime.Today)
        };
        isEditing = false;
        errorMessage = null;
        showModal = true;
    }

    private void ShowEditModal(AppointmentDto appointment)
    {
        appointmentForm = new AppointmentFormModel
        {
            Id = appointment.Id,
            Title = appointment.Title,
            Description = appointment.Description,
            PetIdString = appointment.PetId?.ToString(),
            Date = appointment.AppointmentDate,
            TimeString = appointment.AppointmentTime?.ToString("HH:mm")
        };
        isEditing = true;
        errorMessage = null;
        showModal = true;
    }

    private void CloseModal()
    {
        showModal = false;
        appointmentForm = new AppointmentFormModel();
    }

    private async Task SaveAppointment()
    {
        isSaving = true;
        errorMessage = null;

        try
        {
            TimeOnly? time = null;
            if (!string.IsNullOrEmpty(appointmentForm.TimeString) && TimeOnly.TryParse(appointmentForm.TimeString, out var parsedTime))
            {
                time = parsedTime;
            }

            if (isEditing)
            {
                var request = new UpdateAppointmentRequest(
                    appointmentForm.PetId,
                    appointmentForm.Title,
                    appointmentForm.Description,
                    appointmentForm.Date,
                    time,
                    null
                );
                var result = await AppointmentSvc.UpdateAppointmentAsync(appointmentForm.Id, request);
                if (result == null)
                {
                    errorMessage = "Failed to update task. Please try again.";
                    return;
                }
            }
            else
            {
                var request = new CreateAppointmentRequest(
                    appointmentForm.PetId,
                    appointmentForm.Title ?? "",
                    appointmentForm.Description,
                    appointmentForm.Date,
                    time
                );
                var result = await AppointmentSvc.CreateAppointmentAsync(request);
                if (result == null)
                {
                    errorMessage = "Failed to add task. Please try again.";
                    return;
                }
            }

            CloseModal();
            await LoadDataAsync();
        }
        finally
        {
            isSaving = false;
        }
    }

    private void ShowDeleteConfirm(AppointmentDto appointment)
    {
        appointmentToDelete = appointment;
        showDeleteModal = true;
    }

    private void CloseDeleteModal()
    {
        showDeleteModal = false;
        appointmentToDelete = null;
    }

    private async Task DeleteAppointment()
    {
        if (appointmentToDelete == null) return;

        isDeleting = true;
        try
        {
            var success = await AppointmentSvc.DeleteAppointmentAsync(appointmentToDelete.Id);
            if (success)
            {
                CloseDeleteModal();
                await LoadDataAsync();
            }
            else
            {
                errorMessage = "Failed to delete task. Please try again.";
            }
        }
        finally
        {
            isDeleting = false;
        }
    }

    private class AppointmentFormModel
    {
        public int Id { get; set; }
        public string? Title { get; set; }
        public string? Description { get; set; }
        public string? PetIdString { get; set; }
        public int? PetId => string.IsNullOrEmpty(PetIdString) ? null : int.TryParse(PetIdString, out var id) ? id : null;
        public DateOnly Date { get; set; } = DateOnly.FromDateTime(DateTime.Today);
        public string? TimeString { get; set; }
    }
}
