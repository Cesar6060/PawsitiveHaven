@page "/register"
@inject AuthStateService AuthState
@inject NavigationManager Navigation

<PageTitle>Registration - Pawsitive Haven</PageTitle>

@code {
    protected override void OnInitialized()
    {
        if (AuthState.IsAuthenticated)
        {
            Navigation.NavigateTo("/dashboard");
        }
    }
}

<div class="min-vh-100 d-flex align-items-center justify-content-center bg-light">
    <div class="card shadow-sm" style="max-width: 450px; width: 100%;">
        <div class="card-body p-4 text-center">
            <div class="mb-4">
                <i class="bi bi-shield-lock fs-1 text-primary"></i>
            </div>
            <h3 class="mb-3">Registration by Invitation Only</h3>
            <p class="text-muted mb-4">
                Pawsitive Haven accounts are created by administrators for approved fosters.
                If you're interested in becoming a foster, please contact us.
            </p>

            <div class="d-grid gap-2">
                <a href="mailto:fostersupport@pawsitivehaven.org" class="btn btn-primary">
                    <i class="bi bi-envelope me-2"></i>Contact Foster Support
                </a>
                <a href="/login" class="btn btn-outline-secondary">
                    <i class="bi bi-box-arrow-in-right me-2"></i>Already have an account? Login
                </a>
            </div>

            <hr class="my-4" />

            <div class="text-start">
                <h6 class="mb-2">How to become a foster:</h6>
                <ol class="text-muted small mb-0">
                    <li>Email us at fostersupport@pawsitivehaven.org</li>
                    <li>Complete our foster application</li>
                    <li>Attend a foster orientation session</li>
                    <li>Receive your account credentials</li>
                </ol>
            </div>
        </div>
    </div>
</div>
