@page "/settings"
@using PawsitiveHaven.Web.Models
@using PawsitiveHaven.Web.Services
@inject AuthStateService AuthState
@inject NavigationManager Navigation
@inject IJSRuntime JS
@inject NotificationService NotificationSvc

<PageTitle>Settings - Pawsitive Haven</PageTitle>

@if (!AuthState.IsAuthenticated)
{
    <div class="text-center py-5">
        <i class="bi bi-lock fs-1 text-muted"></i>
        <h4 class="mt-3">Please Log In</h4>
        <p class="text-muted">You need to be logged in to access settings.</p>
        <a href="/login" class="btn btn-primary">Go to Login</a>
    </div>
}
else
{
    <div class="container" style="max-width: 600px;">
        <h1 class="mb-4">Settings</h1>

        <!-- Account Information -->
        <div class="card mb-4">
            <div class="card-header">
                <i class="bi bi-person-circle me-2"></i>Account Information
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-4 text-muted">Username</div>
                    <div class="col-8"><strong>@AuthState.Username</strong></div>
                </div>
                <div class="row mb-3">
                    <div class="col-4 text-muted">User ID</div>
                    <div class="col-8">@AuthState.UserId</div>
                </div>
                <div class="row">
                    <div class="col-4 text-muted">Role</div>
                    <div class="col-8">
                        <span class="badge @(AuthState.IsAdmin ? "bg-danger" : "bg-secondary")">
                            @(AuthState.IsAdmin ? "Administrator" : "User")
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Notification Preferences -->
        <div class="card mb-4">
            <div class="card-header">
                <i class="bi bi-bell me-2"></i>Email Notifications
            </div>
            <div class="card-body">
                @if (_loadingPreferences)
                {
                    <div class="text-center py-3">
                        <div class="spinner-border spinner-border-sm text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <span class="ms-2">Loading preferences...</span>
                    </div>
                }
                else if (_preferencesError != null)
                {
                    <div class="alert alert-danger mb-0">
                        <i class="bi bi-exclamation-triangle me-2"></i>@_preferencesError
                    </div>
                }
                else
                {
                    @if (_saveSuccess)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="bi bi-check-circle me-2"></i>Preferences saved successfully!
                            <button type="button" class="btn-close" @onclick="() => _saveSuccess = false"></button>
                        </div>
                    }

                    <div class="mb-4">
                        <div class="form-check form-switch mb-3">
                            <input class="form-check-input" type="checkbox" role="switch" id="emailAppointments"
                                   checked="@_emailAppointments" @onchange="OnEmailAppointmentsChanged" disabled="@_saving">
                            <label class="form-check-label" for="emailAppointments">
                                <strong>Appointment Confirmations</strong>
                                <br>
                                <small class="text-muted">Receive email notifications when appointments are scheduled</small>
                            </label>
                        </div>

                        <div class="form-check form-switch mb-3">
                            <input class="form-check-input" type="checkbox" role="switch" id="emailReminders"
                                   checked="@_emailReminders" @onchange="OnEmailRemindersChanged" disabled="@_saving">
                            <label class="form-check-label" for="emailReminders">
                                <strong>Appointment Reminders</strong>
                                <br>
                                <small class="text-muted">Receive reminder emails before upcoming appointments</small>
                            </label>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="reminderDays" class="form-label">
                            <strong>Reminder Timing</strong>
                        </label>
                        <select class="form-select" id="reminderDays" @bind="_reminderDaysBefore"
                                @bind:after="OnReminderDaysChanged" disabled="@(_saving || !_emailReminders)">
                            <option value="1">1 day before</option>
                            <option value="2">2 days before</option>
                            <option value="3">3 days before</option>
                        </select>
                        <small class="text-muted">How many days in advance to send reminder emails</small>
                    </div>

                    @if (_saving)
                    {
                        <div class="text-center py-2">
                            <div class="spinner-border spinner-border-sm text-primary" role="status">
                                <span class="visually-hidden">Saving...</span>
                            </div>
                            <span class="ms-2">Saving...</span>
                        </div>
                    }
                }
            </div>
        </div>

        <!-- App Information -->
        <div class="card mb-4">
            <div class="card-header">
                <i class="bi bi-info-circle me-2"></i>About
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-4 text-muted">App Name</div>
                    <div class="col-8">Pawsitive Haven</div>
                </div>
                <div class="row mb-3">
                    <div class="col-4 text-muted">Version</div>
                    <div class="col-8">1.0.0</div>
                </div>
                <div class="row">
                    <div class="col-4 text-muted">Support</div>
                    <div class="col-8">
                        <a href="mailto:support@pawsitivehaven.com" class="text-decoration-none">
                            support@pawsitivehaven.com
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Links -->
        <div class="card mb-4">
            <div class="card-header">
                <i class="bi bi-link-45deg me-2"></i>Quick Links
            </div>
            <div class="list-group list-group-flush">
                <a href="/resources" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                    <span><i class="bi bi-book me-2"></i>Pet Resources</span>
                    <i class="bi bi-chevron-right text-muted"></i>
                </a>
                <a href="/faq" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                    <span><i class="bi bi-question-circle me-2"></i>FAQ</span>
                    <i class="bi bi-chevron-right text-muted"></i>
                </a>
                <a href="/chat" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                    <span><i class="bi bi-chat-dots me-2"></i>AI Assistant</span>
                    <i class="bi bi-chevron-right text-muted"></i>
                </a>
            </div>
        </div>

        @if (AuthState.IsAdmin)
        {
            <!-- Admin Section -->
            <div class="card mb-4 border-danger">
                <div class="card-header bg-danger text-white">
                    <i class="bi bi-shield-lock me-2"></i>Administration
                </div>
                <div class="list-group list-group-flush">
                    <a href="/admin/users" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <span><i class="bi bi-people me-2"></i>User Management</span>
                        <i class="bi bi-chevron-right text-muted"></i>
                    </a>
                    <a href="/admin/faqs" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <span><i class="bi bi-card-list me-2"></i>FAQ Management</span>
                        <i class="bi bi-chevron-right text-muted"></i>
                    </a>
                </div>
            </div>
        }

        <!-- Logout -->
        <div class="card border-warning">
            <div class="card-body">
                <h5 class="card-title text-warning">
                    <i class="bi bi-box-arrow-right me-2"></i>Sign Out
                </h5>
                <p class="card-text text-muted">
                    Sign out of your account. You'll need to log in again to access your data.
                </p>
                <button class="btn btn-warning" @onclick="Logout">
                    <i class="bi bi-box-arrow-right me-1"></i> Sign Out
                </button>
            </div>
        </div>
    </div>
}

@code {
    private bool _loadingPreferences = true;
    private bool _saving = false;
    private bool _saveSuccess = false;
    private string? _preferencesError;

    private bool _emailAppointments = true;
    private bool _emailReminders = true;
    private int _reminderDaysBefore = 1;

    protected override async Task OnInitializedAsync()
    {
        if (AuthState.IsAuthenticated)
        {
            await LoadPreferences();
        }
    }

    private async Task LoadPreferences()
    {
        _loadingPreferences = true;
        _preferencesError = null;

        try
        {
            var preferences = await NotificationSvc.GetPreferencesAsync();
            if (preferences != null)
            {
                _emailAppointments = preferences.EmailAppointments;
                _emailReminders = preferences.EmailReminders;
                _reminderDaysBefore = preferences.ReminderDaysBefore;
            }
        }
        catch (Exception ex)
        {
            _preferencesError = "Failed to load notification preferences. Please try again later.";
        }
        finally
        {
            _loadingPreferences = false;
        }
    }

    private async Task OnEmailAppointmentsChanged(ChangeEventArgs e)
    {
        _emailAppointments = (bool)(e.Value ?? false);
        await SavePreferences();
    }

    private async Task OnEmailRemindersChanged(ChangeEventArgs e)
    {
        _emailReminders = (bool)(e.Value ?? false);
        await SavePreferences();
    }

    private async Task OnReminderDaysChanged()
    {
        await SavePreferences();
    }

    private async Task SavePreferences()
    {
        _saving = true;
        _saveSuccess = false;
        StateHasChanged();

        try
        {
            var request = new UpdateNotificationPreferencesRequest(
                _emailAppointments,
                _emailReminders,
                _reminderDaysBefore
            );

            var result = await NotificationSvc.UpdatePreferencesAsync(request);
            if (result != null)
            {
                _saveSuccess = true;
            }
            else
            {
                _preferencesError = "Failed to save preferences. Please try again.";
            }
        }
        catch (Exception)
        {
            _preferencesError = "Failed to save preferences. Please try again.";
        }
        finally
        {
            _saving = false;
            StateHasChanged();
        }
    }

    private async Task Logout()
    {
        // Clear server-side auth state
        AuthState.ClearAuthState();

        // Clear client-side storage
        await JS.InvokeVoidAsync("localStorage.removeItem", "authToken");
        await JS.InvokeVoidAsync("localStorage.removeItem", "userId");
        await JS.InvokeVoidAsync("localStorage.removeItem", "username");
        await JS.InvokeVoidAsync("localStorage.removeItem", "userLevel");

        // Redirect to login
        Navigation.NavigateTo("/login", forceLoad: true);
    }
}
